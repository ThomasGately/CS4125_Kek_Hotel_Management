@model List<CS4125_Kek_Hotel_Management.Models.MyBookings>

@{
    ViewBag.Title = "MyBookings";
}

<h2>MyBookings</h2>

<table class="table">
<tr>
    <th>
        Room Descrption
    </th>
    <th>
        Price
    </th>
    <th>
        Payed
    </th>
    <th>
        Arrival Date
    </th>
    <th>
        Departure Date
    </th>
    <th>
        Chech In
    </th>
    <th>
        Chech Out
    </th>
    <th>
        AadOns
    </th>
    <th></th>
</tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoomDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivalDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartureDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChechIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChechOut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AadOns)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BookingId })
        </td>
    </tr>
}

</table>

